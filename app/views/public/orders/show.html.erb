<div class="container">
  <div class="row">
    <div class="col-xs-8">
    <h5>注文履歴詳細</h5>

      <b>注文情報</b>
        <table class='table table-hover table-inverse'>
          <tbody>
            <tr>
              <td>注文日</td>
              <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
            </tr>
            <tr>
              <td>配送先</td>
              <td>
                〒<%= @order.postal_code %><br>
                <%= @order.address %><br>
                <%= @order.customer.last_name %><%= @order.customer.first_name %>
              </td>
            </tr>

            <tr>
                <td>支払方法</td>
                <td><%= @order.payment_method_i18n %></td>
            </tr>

            <tr>
                <td>ステータス</td>
                <td><%= @order.status %></td>
            </tr>
          </tbody>
        </table>
    </div>
    <div class="col-xs-3">
      <b>請求情報</b>
        <table class='table table-hover table-inverse'>
          <tbody>
            <tr>
              <td>商品合計</td>
              <td><%= (@order.total_payment - @order.shipping_cost) %>円</td>
            </tr>
            <tr>
              <td>配送料</td>
              <td><%= @order.shipping_cost %>円</td>
            </tr>
            <tr>
              <td><b>ご請求額</b></td>
              <td><%= @order.total_payment %>円</td>
            </tr>
          </tbody>
        </table>
    </div>

  </div>
  <div class="col-xs-8">
    <b>注文内容</b>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>商品</th>
          <th >単価（税込）</th>
          <th >個数</th>
          <th >小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= (order_detail.item.price * 1.1).floor.to_s(:delimited) %>円</td>
            <td><%= order_detail.amount %></td>
            <td><%= (order_detail.item.price * order_detail.amount * 1.1).floor.to_s(:delimited) %>円</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>