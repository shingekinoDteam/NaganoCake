<h4>注文履歴一覧</h4>
<table>
  <tr>
    <td>注文日</td>
    <td>配送先</td>
    <td>注文商品</td>
    <td>支払金額</td>
    <td>ステータス</td>
    <td>注文詳細</td>
  </tr>
    <% @orders.each do |order| %>
      <tr>
          <td><%= order.created_at %></td>
          <td><%= order.postal_code %><br>
              <%= order.adress %><br>
              <%= order.customer.first_name%><%= order.customer.last_name %>
          </td>
          <td></td>
          <td></td>
          <td><%= order.status_i18n %></td>
      </tr>
    <% end %>
</table>