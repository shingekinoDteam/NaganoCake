<div class='container px-5 px-sm-0 my-5'>
  <div class='row'>
    <div class='col-md-3'>
      <table class='table table-hover table-bordered'>
        <thead class="mw-100">
          <tr>
            <!--検索機能 未実装-->
            <th class="text-center">ジャンル検索</th>
          </tr>
        </thead>
        <tbody class="min-1000px border">
          <% @genres.each do |genre| %>
            <tr>
              <!--現状はジャンル名表示だけ、linkなし-->
              <td class="border-0"><%= genre.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2 class="font-weight-bold">商品一覧
        <small class="text-body-secondary">（全<%= @items.total_count %>件）</small>
      </h2>

      <div class="row">
        <% @items.each do |item| %>
          <div class="col-md-3 mb-4">
            <div class="card">
              <%= link_to item_path(item) do %>
                <%= image_tag item.image, class: 'card-img-top img-fluid' if item.image.attached? %>
                <div class="card-body">
                  <h5 class="card-title"><%= item.name %></h5>
                  <p class="card-text"><%= item.price %>円</p>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="d-flex justify-content-center">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>