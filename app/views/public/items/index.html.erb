<div class='container px-5 px-sm-0 my-5'>
  <div class='row'>
    <div class='col-md-3'>
          
        <table class='table table-hover table-bordered'>
            
          <thead class="mw-100">
            <tr>
              <!--検索機能 未実装-->
              <th class="text-center">ジャンル検索</th>
            </tr>
          </thead>
          
          <tbody class="min-1000px border">
            <% @genres.each do |genre| %>
              <tr>
                <!--現状はジャンル名表示だけ、linkなし-->
                <td class="border-0"><%= genre.name %></td>
              </tr>
            <% end %>
          </tbody>
          
      </table>
      
    </div>
    
    <div class='col-md-8 offset-md-1'>
      <div class="row">
        
        <h2 class="font-weight-bold">商品一覧
         <small class="text-body-secondary">（全<%= @items.count %>件）</small>
        </h2>
        
        <div class="d-flex flex-wrap">
          <% @items.each do |item| %>
            <div class="w-25">
              <a href="<% item_path %>">
                <%= item.image %>
                <%= item.name %>
                <%= item.price %>
              </a>
            </div>
          <% end %>
        </div>
        
        <%= paginate @items %>
        
      </div>
    </div>
    
  </div>
</div>