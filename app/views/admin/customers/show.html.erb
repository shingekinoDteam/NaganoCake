<div class='container px-2 px-sm-0'>
  <div class='row ml-5 pl-5 mt-3'>
    <h1 style="background-color: #dcdcdc; font-size: 24px;"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h1>
  </div>
  <table class='table mt-5 table-borderless'>
    <tr>
      <td style="width: 15%">会員ID</td>
      <td><%= @customer.id %></td>
      <td></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= @customer.last_name %> <%= @customer.first_name %></td>
      <td></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      <td></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
      <td></td>
    </tr>
    <tr>
      <td>住所</td>
      <td colspan="2"><%= @customer.address %></td>
      <td></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
      <td></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
      <td></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <% if @customer.is_active == true %>
        <td style="width: 35%" class="text-success">有効</td>
      <% else %>
        <td style="width: 35%" class="text-secondary">退会</td>
      <% end %>
      <td></td>
    </tr>
    <tr>
      <td></td>
      <td><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-sm btn-success" %></td>
      <td><%= link_to "注文履歴一覧を見る", admin_path, class: "btn btn-sm btn-primary" %></td>
    </tr>
  </table>
</div>