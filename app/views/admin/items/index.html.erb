<h2>商品一覧</h2>

<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td>
        <%= link_to admin_item_path(item) do %>
          <%= item.name %>
        <% end %>
      </td>
      <td><%= number_with_delimiter(item.price) %></td>
      <td><%= item.genre.name %></td>
      <td style="color:green;"><%= item.on_sale? ? '販売停止中' : '販売中' %></td>
    </tr>
  <% end %>
 </tbody>
</table>
<div class="d-flex justify-content-center">
  <%= paginate @items %>
</div>